pipeline {
    agent any

    tools {
        nodejs 'Node_18.8.0'  // âœ… Must be set in Global Tool Configuration
    }

    environment {
        PLAYWRIGHT_BROWSERS_PATH = "${env.HOME}/.cache/ms-playwright"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ”„ Cloning repo...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing npm dependencies...'
                sh 'npm install'
                echo 'ğŸ­ Installing Playwright browsers...'
                sh 'npx playwright install'
            }
        }

        stage('Run Playwright + Cucumber Tests') {
            steps {
                echo 'ğŸš€ Running tests...'
                sh 'npx cucumber-js --require tests/step-definitions/**/*.js'
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo 'ğŸ“‚ Archiving any test results or screenshots...'
                archiveArtifacts  artifacts: 'test-results/**/*.*', allowEmptyArchive: true
            }
        }
    }

    post {
        success {
            echo 'âœ… Tests passed!'
        }
        failure {
            echo 'âŒ Tests failed.'
        }
        always {
            echo 'ğŸ Pipeline finished.'
        }
    }
}
