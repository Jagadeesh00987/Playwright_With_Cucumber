{
  "name": "playwrightpractice",
  "version": "1.0.0",
  "description": "Playwright + Cucumber E2E Test Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js ",
    "test:smoke": "cucumber-js -p smoke",
    "test:regression": "cucumber-js --tags '@regression' --parallel 2",
    "test:failed": "cucumber-js @rerun.txt",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "cucumber",
    "e2e",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@playwright/test": "^1.51.1",
    "dotenv": "^16.5.0",
    "eslint": "^8.0.0",
    "playwright": "^1.51.1",
    "prettier": "^2.3.0"
  },
  "directories": {
    "test": "tests"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  }
}
